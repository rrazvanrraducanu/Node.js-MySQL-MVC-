<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
</head>
<body>
<div class="table-data">
  <h2><%= title %></h2>
  <table border="1">
    <tr>
      <th>ID</th>
      <th>Nume</th>
      <th>Culoare</th>
      <th>Marime</th>
      <th>Pret</th>
      <th>View</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>

    <%
    if(flowerData.length!=0){
      var i=1;
    flowerData.forEach(function(data){
    %>
    <tr>
      <td><%=data.id %></td>
      <td><%=data.nume %></td>
      <td><%=data.culoare %></td>
      <td><%=data.marime %></td>
      <td><%=data.pret %></td>
      <td><a href="/view/<%=data.id%>">View</a></td>
      <td><a href="/edit/<%=data.id%>">Edit</a></td>
      <td><a href="/delete/<%=data.id%>">Delete</a></td>
    </tr>
    <%  i++; }) %>
    <% } else{ %>
      <tr>
        <td colspan="7">No Data Found</td>
      </tr>
    <% } %>
  </table>
  <br/><br/>
  <a href="add_form">Add new record</a>
</div>
</body>
</html>
